    <!-- Clear Chat Confirmation Modal -->
    <div class="confirm-modal" id="confirmClearModal">
        <div class="confirm-content">
            <div class="confirm-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3>Clear Chat History?</h3>
            <p>This will permanently delete all your chat messages. This action cannot be undone.</p>
            <div class="confirm-actions">
                <button class="confirm-btn cancel-btn" id="cancelClearBtn">Cancel</button>
                <button class="confirm-btn delete-btn" id="confirmClearBtn">Clear Chat</button>
            </div>
        </div>
    </div>

    <!-- Chatbot Popup -->
    <div class="chatbot-popup" id="chatbotPopup">
        <div class="chat-container">
            <div class="chat-header">
                <div>
                    <h2><i class="fas fa-robot"></i> EngiMate Assistant</h2>
                    <div class="status">
                        <div class="status-dot"></div>
                        Online - Ready to help
                    </div>
                </div>
                <div class="header-actions">
                    <button class="clear-chat" id="clearChatButton" title="Clear chat history">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                    <button class="close-chat" id="closeChatButton" title="Close chat">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            
            <div class="chat-messages" id="chatMessages">
                <!-- Messages will be loaded here -->
            </div>
            
            <div class="chat-input">
                <div class="input-container">
                    <input type="text" id="messageInput" placeholder="Type your message..." />
                    <button id="sendButton">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Fixed Chat Icon -->
    <div class="chat-icon-container">
        <div class="chat-icon" id="chatIcon">
        </div>
